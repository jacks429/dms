---
/* eslint max-lines: 'off' */

import {db, RegisterSchema} from 'astro:db'

const cultural_registers = await db.select().from(RegisterSchema)

if (Astro.request.method === 'POST') {
	const formData = await Astro.request.formData();
	const id = formData.get('id');
	const Sector = formData.get('sector');
	const ExistingRegisters = formData.get('ExistingRegisters');
	const EntityCount = formData.get('Entity_Count');
	const EstimatedCompleteness = formData.get('Completeness');
	const TotalEntityCount = formData.get('Total_Entity_Count');

	await db.insert(RegisterSchema).values({id, Sector, ExistingRegisters, EntityCount, EstimatedCompleteness, TotalEntityCount});
}
